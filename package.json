{
  "private": true,
  "scripts": {
    "dev": "parcel development/index.html -d devserver/ --global index --open",
    "build": "parcel build development/index.html -d production/ --global index --no-source-maps --public-url .",
    "update:dependencies": "npx npm-check-updates -u && npm i",
    "remove:dependencies": "rm -R node_modules",
    "start": "npm run dev"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.4",
    "parcel-bundler": "latest",
    "parcel-plugin-inliner": "^1.0.14",
    "sass": "^1.26.9"
  },
  "postcss": {
    "modules": false,
    "plugins": {
      "autoprefixer": {
        "grid": true
      }
    }
  }
}
